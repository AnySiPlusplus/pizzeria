
%main.container.general-main-wrap
  = render 'checkouts/partials/header_bar'
  .text-center.mb-40
    %h3.general-subtitle= t('.thank_for_order')
    %p.fw-300= t('.send_leter', email: current_user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0 Order #R25314582
        %p.general-address.mb-30 October 29, 2016
      - if @shipping_address
        %p.general-address
          = @shipping_address.receiver_name
          %br
          = @shipping_address.street
          %br
          = @shipping_address.building
          %br
          = @shipping_address.city
          %br
          = @shipping_address.phone
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= t('.order_id', number: @order.order_number)
      %p.general-address.mb-30= @order.completed_date
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600= t('.pizza')
          %th.col-method
          %th
            %span.in-grey-600= t('.price')
          %th
            %span.in-grey-600= t('.quantity')
          %th
            %span.in-grey-600= t('.total')
      %tbody
        = render 'checkouts/partials/order_item'
  .text-center.general-text-right
    = render 'checkouts/partials/order_total'
  .text-center
    = link_to t('.back_to_store'), home_path, class: 'btn btn-default mb-20'
