#address{role: "tabpanel"}
  .hidden-xs.hidden-sm
    .row
      .col-md-5
        %h3.general-subtitle.mt-0= t('.billing_address')
      .col-md-5.col-md-offset-1
        %h3.general-subtitle.mt-0= t('.shipping_address')
  .row
    .col-md-5.mb-40#billing_form
      .visible-xs.visible-sm
        %h3.general-subtitle.mt-0= t('.billing_address')
      = render 'form', address_form: @billing_form
    .col-md-5.col-md-offset-1.mb-25#shipping_form
      .visible-xs.visible-sm
        %h3.general-subtitle.mt-0= t('.shipping_address')
      = render 'form', address_form: @shipping_form
