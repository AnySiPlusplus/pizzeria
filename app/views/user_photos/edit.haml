%main.container
  %h1.general-title-margin= t('.settings')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: edit_address_path, 'aria-controls': "address" }= t('.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: edit_user_registration_path, 'aria-controls': "privacy" }= t('.privacy')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: edit_user_photo_path, 'aria-controls': "privacy" } User photo
  .tab-content
    - if current_user.picture
      = image_tag(current_user.picture.image_url(:thumbnail))
      = button_to 'Destroy Image', user_photo_path, method: :delete 
    = simple_form_for @picture, url: user_photo_path, method: :put do |f|
      = f.file_field :image, required: true
      = f.submit
