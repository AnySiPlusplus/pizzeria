%main.container
  %a.general-back-link{href: pizzas_path}
    %i.fa.fa-long-arrow-left.mr-15
    Back to results
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{src: "https://i.postimg.cc/63Gn2tYs/9.png"}
        .images.clearfix
          %a.img-link{href: "#"}
            %img{src: "https://i.postimg.cc/63Gn2tYs/9.png"}
          %a.img-link{href: "#"}
            %img{src: "https://i.postimg.cc/63Gn2tYs/9.png"}
          %a.img-link{href: "#"}
            %img{src: "https://i.postimg.cc/63Gn2tYs/9.png"}
    .col-sm-6
      %h1.mt-res-0 Real-Life Responsive Web Design
      %p.lead.small Vitaly Friedman, Daniel Mall,Vitaly Friedman
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10= @pizza.price.format
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position Add to Cart
      .general-info-wrap.divider-lg
        %p Description
        %p.lead.small.line-height-2
          - if description_length(@pizza)
            #short_description
              = description_short(@pizza)
              %a.in-gold-500.ml-10#read_more{href: "#"} Read more
            #full_description.hidden
              = description_full(@pizza)
          - else
            = description_full(@pizza)
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left Filling
          %p.lead.small.pull-right= @pizza.filling
  - if user_signed_in?
    = render 'pizzas/partials_show/review_form'
  = render 'pizzas/partials_show/reviews'
