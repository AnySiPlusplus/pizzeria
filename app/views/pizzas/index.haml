%main.container.mr-t-20
  %h1.general-title-margin Pizzas
  .hidden-xs.clearfix
    %a.filter-link{href: pizzas_path} Custom pizza
    .dropdowns.pull-right
      .dropdown.width-240
        = render 'pizzas/order_dropdown'
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        %a.filter-link{href: pizzas_path}
          All
          %span.badge.general-badge= Pizza.count
      - Category.all.each do |category|
        %li.mr-35
          %a.filter-link{href: pizzas_path(category_id: category.id)}
            = category.name
            %span.badge.general-badge= category.pizzas.count
  .mb-120
    .row#pizzas_list
      = render "pizzas/pizza"
    .text-center
      = render "view_more"
