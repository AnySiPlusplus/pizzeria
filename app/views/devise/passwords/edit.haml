%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('.set_new_password')
  .general-form
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |form|
      = form.hidden_field :reset_password_token 
      .form-group.mb-30
        %label.control-label.input-label{for: "password"}= t('.type_password') 
        = form.password_field :password, class: 'form-control', id: 'password', placeholder: t('.type_password') 
      .form-group.mb-40
        %label.control-label.input-label{for: "confirmPassword"}= t('.confirm')
        = form.password_field :password_confirmation, class: 'form-control', id: 'confirmPassword', placeholder: t('.confirm')
      = form.submit t('.change'), class: 'btn btn-default center-block mb-20'
