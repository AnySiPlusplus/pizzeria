%main.container.general-main-wrap
  .text-center
    %h1.mb-30= t('.forgot')
    %p.general-password-text= t('.email_instruction')
  .general-form
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |form|
      .form-group.mb-25
        = form.email_field :email, class: 'form-control', id: 'email', placeholder: "Enter your email"
      = form.submit 'Email Instructions', class: 'btn btn-default center-block mb-20'
      .text-center
        %a.in-gold-500.mb-20{href: new_session_path(resource_name)}= t('.cancel')
