%main.container.general-main-wrap.fillings.cart-conteiner
  %h1.general-title-margin Cart
  .hidden-xs
    %table.table
      %tr.no-hover
        %th.col-pic.pl-0
          %span.in-grey-600 Product
        %th.col-title
        %th.col-price
          %span.in-grey-600 Price
        %th.col-quantity
          %span.in-grey-600 Quantity
        %th.col-total
          %span.in-grey-600 SubTotal
        %th.col-close
      = render 'carts/order_items'
  .general-order-wrap
    .row
      .move-right
        .res-mr-200.text-center.general-text-right
          %table.general-summary-table.general-summary-table-right.general-text-right
            %tr
              %td
                %strong.font-18.in-gold-500.font-18 Order Total:
              %td
                %strong.font-18.in-gold-500.font-18#total_price= @order.amount_pay.zero? ? @order.amount_pay : @order.amount_pay.format
  %button.btn.btn-default.mb-20.hidden-xs.center-block Checkout
