%main.container.general-main-wrap
  %a.general-back-link{href: orders_path}
    %i.fa.fa-long-arrow-left.mr-15= t('.back_to_orders')
  %h1.general-title-margin= t('.order', number: @order.order_number)
  .row.mb-20
    - if @shipping_address
      .col-sm-3
        %h3.general-subtitle.mt-0= t('.shipping_address')
        %p.general-address
          = @shipping_address.receiver_name
          %br
          = @shipping_address.street
          %br
          = @shipping_address.building
          %br
          = @shipping_address.city
          %br
          = @shipping_address.phone
    .col-sm-3
      %h3.general-subtitle.mt-0= t('.delivery')
      %p.general-address
        = @order.delivery.name
        %br
        = @order.delivery.time
    - if @order.card
      .col-sm-3
        %h3.general-subtitle.mt-0= t('.payment_info')
        %p.general-address
          = @order.masked_card_number
          %br
          = @order.card.validity
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600= t('.pizza')
          %th.col-method
          %th
            %span.in-grey-600= t('.price')
          %th
            %span.in-grey-600= t('.quantity')
          %th
            %span.in-grey-600= t('.total')
      %tbody
        = render 'checkouts/partials/order_item'
  .text-center.general-text-right
    .table.general-summary-table.general-summary-table-right.general-text-right
      = render 'checkouts/partials/order_total'
